<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.interf.SugerenciasController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: #f5f5f5;"
      prefWidth="500"
      prefHeight="600">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="📬 Buzón de Sugerencias"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <TextField fx:id="campoSugerencia"
               promptText="Escribe tu sugerencia aquí..."
               prefWidth="400"
               style="-fx-background-radius: 8; -fx-padding: 8;"/>

    <HBox spacing="12" alignment="CENTER">
        <Button text="Agregar" onAction="#agregarSugerencia"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <Button text="Leer" onAction="#leerSugerencia"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <Button text="Eliminar" onAction="#eliminarSugerencia"
                style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 8;"/>
    </HBox>

    <Label text="📝 Sugerencias en el buzón:"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

    <TextArea fx:id="areaSugerencias"
              prefWidth="400"
              prefHeight="300"
              wrapText="true"
              editable="false"
              style="-fx-background-radius: 10; -fx-control-inner-background: #ffffff; -fx-font-size: 14px;"/>

    <Button text="Volver al Menú Principal"
            onAction="#volverAlMenu"
            style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 8;"/>

</VBox>